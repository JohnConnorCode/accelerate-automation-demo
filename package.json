{
  "name": "accelerate-content-automation",
  "version": "2.0.0",
  "description": "Advanced automated content curation system with orchestration and AI prioritization",
  "main": "dist/index.js",
  "bin": {
    "accelerate": "./dist/cli.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "vite",
    "dev:server": "tsx watch server.ts",
    "dev:api": "vercel dev --listen 3000",
    "server": "tsx server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "start:prod": "NODE_ENV=production pm2 start dist/server.js --name accelerate-api",
    "build": "npm run build:frontend",
    "build:full": "npm run build:api && npm run build:frontend",
    "build:api": "tsc --noEmit",
    "build:frontend": "vite build",
    "build:ts": "tsc",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "typecheck": "tsc --noEmit",
    "fetch:local": "tsx src/scripts/test-fetch.ts",
    "score:local": "tsx src/scripts/test-score.ts",
    "monitor": "tsx src/scripts/monitor.ts",
    "validate": "npm run typecheck && npm run test",
    "cli": "ts-node src/cli.ts",
    "cli:build": "tsc src/cli.ts --outDir dist",
    "dashboard": "ts-node src/lib/control-dashboard.ts",
    "pipeline": "ts-node src/scripts/run-data-pipeline.ts",
    "crawl": "ts-node src/scripts/run-data-pipeline.ts",
    "orchestrate": "tsx src/orchestrator.ts",
    "orchestrate:projects": "tsx src/orchestrator.ts projects",
    "orchestrate:funding": "tsx src/orchestrator.ts funding",
    "orchestrate:resources": "tsx src/orchestrator.ts resources",
    "orchestrate:status": "tsx src/orchestrator.ts status",
    "orchestrate:manual": "tsx src/orchestrator.ts run",
    "accelerate:update": "tsx src/orchestrator.ts run",
    "accelerate:schedule": "tsx src/services/scheduling-service.ts",
    "pipeline:start": "tsx src/services/automated-pipeline.ts start",
    "pipeline:once": "tsx src/services/automated-pipeline.ts once",
    "pipeline:status": "tsx src/services/automated-pipeline.ts status",
    "test:integration": "jest src/__tests__/integration/content-automation.test.ts",
    "admin": "tsx scripts/admin.ts",
    "admin:test": "tsx scripts/admin.ts test",
    "admin:run": "tsx scripts/admin.ts run",
    "admin:stats": "tsx scripts/admin.ts stats",
    "admin:setup": "tsx scripts/admin.ts setup",
    "admin:create-user": "tsx scripts/create-admin-user.ts",
    "seed": "tsx scripts/seed-dev-data.ts",
    "seed:dev": "NODE_ENV=development tsx scripts/seed-dev-data.ts",
    "seed:prod": "NODE_ENV=production tsx scripts/seed-dev-data.ts",
    "setup": "tsx scripts/admin.ts setup",
    "predeploy": "node scripts/generate-vercel-config.js",
    "deploy": "npm run predeploy && vercel",
    "deploy:prod": "npm run predeploy && vercel --prod"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.19",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/validator": "^13.15.2",
    "@vercel/node": "^4.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "clsx": "^2.1.1",
    "commander": "^11.1.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.9.0",
    "express": "^4.21.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "inquirer": "^12.9.3",
    "isomorphic-dompurify": "^2.26.0",
    "json2csv": "^6.0.0-alpha.2",
    "lucide-react": "^0.541.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "ora": "^8.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "resend": "^2.0.0",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "twitter-api-v2": "^1.15.2",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "vite": "^7.1.3",
    "web3": "^4.3.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^11.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.0",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vercel": "^32.0.0",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
