{
  "version": 2,
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "public": true,
  "github": {
    "enabled": true
  },
  "rewrites": [
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/fetch-content",
      "schedule": "0 0 * * *"
    }
  ]
}