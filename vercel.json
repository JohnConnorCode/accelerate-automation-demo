{
  "version": 2,
  "name": "accelerate-content-automation",
  "framework": "vite",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/health.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/status.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/run.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/webhook.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/admin.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/dashboard.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/status",
      "dest": "/api/status.ts"
    },
    {
      "src": "/api/run",
      "dest": "/api/run.ts"
    },
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/run",
      "schedule": "0 0 * * *"
    }
  ]
}