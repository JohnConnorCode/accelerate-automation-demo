# ACCELERATE CONTENT AUTOMATION - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values

# Supabase Configuration (REQUIRED)
# Get these from your Accelerate Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# API Keys for Data Sources (OPTIONAL but recommended)
# These improve data quality and rate limits

# GitHub - For fetching early-stage projects and developer tools
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# ProductHunt - For fetching newly launched projects
# Get from: https://www.producthunt.com/v2/oauth/applications
PRODUCTHUNT_TOKEN=

# Twitter/X API v2 - For social signals and announcements
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=

# Optional: OpenAI for content enrichment
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Optional: Webhook for real-time updates to Accelerate
ACCELERATE_WEBHOOK_URL=
ACCELERATE_WEBHOOK_SECRET=

# Monitoring and Alerts (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Performance Settings
# Adjust based on your infrastructure
MAX_CONCURRENT_FETCHERS=3
BATCH_SIZE=50
MIN_SCORE_THRESHOLD=30

# Scheduling (for cron jobs)
# How often to run updates (in minutes)
UPDATE_INTERVAL=60

# Debug Mode
DEBUG=false